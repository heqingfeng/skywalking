<Configuration status="info">
    <Properties>
        <Property name="log.path">/med/log/apps</Property>
        <Property name="git.group">skywalking</Property>
        <Property name="project.name">backend</Property>
    </Properties>
    <Appenders>
        <RollingFile name="RollingFile" fileName="${log.path}/${project.name}.log"
                     filePattern="${log.path}/bak/${project.name}-%d{yyyy-MM-dd}.log" >
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} [%level] ${git.group}/${project.name} %logger{36} - - %msg%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="7"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <logger name="org.eclipse.jetty" level="INFO"/>
        <logger name="org.apache.zookeeper" level="INFO"/>
        <logger name="io.grpc.netty" level="INFO"/>
        <Root level="info">
            <AppenderRef ref="RollingFile"/>
        </Root>
    </Loggers>
</Configuration>